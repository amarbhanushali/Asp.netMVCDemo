@using CashBack.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="limiter">
<div class="container-login">
        <div class="pagename">User's Login</div>
            <div class="wrap-login">
                <span class="login100-form-title p-b-51">
                    <img src="@Url.Content("~/Content/images/partner_logo.png")" alt="Ahmed Pro Partner" />
                </span>
                <div class="wrap-login100 p-t-50 p-b-90" data-validate = "Username is required">
                    
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="wrap-input100 validate-input m-b-16">


                                @Html.TextBoxFor(m => m.Email, new { @class = "input100" })
                                <span class="focus-input100"></span>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                            <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                                
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "input100" })
                                    <span class="focus-input100"></span>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            <div class="container-login50-form-btn m-t-17">
                                <button class="login100-form-btn">
                                    <img src="@Url.Content("~/Content/images/login.png")" alt="Ahmed Pro Partner" />Login
                                </button>
                            </div>

                            <div class="container-login50-form-btn m-t-17">
                              <button class="cancel100-form-btn">
                                <img src="@Url.Content("~/Content/images/cancel.png")" alt="Ahmed Pro Partner" />Cancel
                              </button>
                            </div>
                            
                            @* Enable this once you have account confirmation enabled for password reset functionality
                                <p>
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </p>*@
                        }
                    
                        </div>
                </div>
            </div>
</div>
    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
